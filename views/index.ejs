<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Central Admission System | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css" />
    <!-- icheck bootstrap -->
    <link
      rel="stylesheet"
      href="plugins/icheck-bootstrap/icheck-bootstrap.min.css"
    />
    <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/adminlte.min.css" />
    <!-- Google Font: Source Sans Pro -->
    <!-- <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet"> -->
  </head>
  <body class="hold-transition login-page" style="margin-top: -3rem;">
    <div class="login-box">
      <div class="login-logo">
        <a href="/">CAS</a>
      </div>
      <!-- /.login-logo -->
      <div class="card">
        <div class="card-body login-card-body">
          <p class="login-box-msg">Sign in to start your session</p>

          <form id="cas-login">
            <div class="input-group mb-3">
              <input
                name="email"
                type="email"
                class="form-control"
                placeholder="Email"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input
                name="password"
                type="password"
                class="form-control"
                placeholder="Password"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>

            <!--  <div class="form-group">
              <label>Custom Select</label>
              <select name="role" class="custom-select">
                <option value="super">System Administrator</option>
                <option value="admin">University Administrator</option>
              </select>
            </div> -->
          </form>
          <button id="login-btn" class="btn btn-info float-right">Login</button>
        </div>
        <!-- /.login-card-body -->
      </div>
    </div>
    <!-- /.login-box -->

    <!-- jQuery -->
    <script src="plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="plugins/serializeObject/jquery.serialize-object.min.js"></script>
    <!-- AdminLTE App -->
    <script src="dist/js/adminlte.min.js"></script>

    <script>
      $("#login-btn").click(function () {
        var info = $("#cas-login").serializeObject();
        $.ajax({
          type: "POST",
          url: "/auth/login",
          contentType: "application/json",
          dataType: "json",
          data: JSON.stringify(info),
          success: function (info) {
            console.log(info.token);
            document.cookie = `Bearer ${info.token}`;
            if (info.role === "admin" || info.role === "super") {
              window.location.replace("/admin");
            } else {
              window.location.replace("/user");
            }
          },
          error: function (err) {
            alert("Error on login");
          },
        });
      });
    </script>
  </body>
</html>
